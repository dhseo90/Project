<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/title_logo"
            android:id="@+id/title_logo"
            android:layout_weight="2"
            android:layout_marginTop="84dp"
            android:layout_marginLeft="18dp"
            />
        <!--
        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:src="@drawable/title"
            android:id="@+id/title"
            android:layout_weight="10"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="70dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/title_str"
            android:id="@+id/textView"
            android:textSize="38dp"
            android:layout_weight="10"
            android:layout_marginTop="80dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:layout_width="50dp"
            android:layout_height="64dp"
            android:id="@+id/setting_btn"
            android:layout_weight="1"
            android:text="@string/setting_str"
            android:background="@drawable/round"
            android:drawableTop="@drawable/setting_btn"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="@string/announcement_btn_str"
                android:id="@+id/announce_btn"
                android:layout_gravity="top|center"
                android:drawableTop="@drawable/announcement_btn"
                android:background="@drawable/round"
                android:layout_marginRight="50dp"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:paddingTop="10dp"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="@string/gallery_btn_str"
                android:id="@+id/gallery_btn"
                android:layout_gravity="top|center"
                android:drawableTop="@drawable/gallery_btn"
                android:background="@drawable/round"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:paddingTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="80dp">

            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="@string/call_btn_str"
                android:id="@+id/call_btn"
                android:layout_gravity="top|center"
                android:drawableTop="@drawable/call_btn"
                android:layout_marginRight="50dp"
                android:background="@drawable/round"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:paddingTop="10dp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="@string/chart_btn_str"
                android:id="@+id/statistics_btn"
                android:layout_gravity="top|center"
                android:drawableTop="@drawable/chart_btn"
                android:background="@drawable/round"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:paddingTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
